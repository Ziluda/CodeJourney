# MY CODE

# 🚨 Don't change the code below 👇
row1 = ["⬜️","⬜️","⬜️"]
row2 = ["⬜️","⬜️","⬜️"]
row3 = ["⬜️","⬜️","⬜️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")
position = input("Where do you want to put the treasure? ")
# 🚨 Don't change the code above 👆

#Write your code below this row 👇

# column first (tens digit), row second (ones digit)

ones_vert = int(position[1]) - 1
tens_horiz = int(position[0]) - 1


#now we'll start first with the selected column cause that's how we'll know which row (lists created above) we're dealing with

column = map[ones_vert]

column[tens_horiz] = "X"

#Write your code above this row 👆

# 🚨 Don't change the code below 👇
print(f"{row1}\n{row2}\n{row3}")

# MY UPDATED CODE AFTER REVISITING THE LESSON, ALL BY MYSELF HEHE

# 🚨 Don't change the code below 👇
row1 = ["⬜️","⬜️","⬜️"]
row2 = ["⬜️","⬜️","⬜️"]
row3 = ["⬜️","⬜️","⬜️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")
position = input("Where do you want to put the treasure? ")
# 🚨 Don't change the code above 👆

#Write your code below this row 👇

# col = horizontal:
# this is the tens place number
# so what the col variable is extracting is the column which refers to the value within the inner three lists (innermost), so it comes in the second square bracket.

# row = vertical
# this is the ones place number
# so what the row variable is extracting is the row which refers to which list in the nested list, so it comes in the first square bracket.

col = int(position[0]) - 1
row = int(position[1]) - 1

map[row][col] = "X"


#Write your code above this row 👆

# 🚨 Don't change the code below 👇
print(f"{row1}\n{row2}\n{row3}")

# MODEL CODE

row1 = ["⬜️","️⬜️","️⬜️"]
row2 = ["⬜️","⬜️","️⬜️"]
row3 = ["⬜️️","⬜️️","⬜️️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")

position = input("Where do you want to put the treasure? ")

horizontal = int(position[0])
vertical = int(position[1])

map[vertical - 1][horizontal - 1] = "X"

print(f"{row1}\n{row2}\n{row3}")
